{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "rootDirs": [".", "test"],
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "importHelpers": true,
    "allowJs": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "lib": ["dom", "es6"]
  },
  "include": ["hooks"],
  "exclude": ["hooks/**/test", "hooks/**/demo"]
}
